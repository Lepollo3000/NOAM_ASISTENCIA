@page
@model LoginModel
@{
    ViewData["Title"] = "Inicio de Sesion";
    ViewData["Welcome"] = "Iniciar Sesion";
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<!-- ===================== Imagen ===================== -->
<div class="col-lg-5 d-none d-lg-block bg-login-image ml-5"></div>

<!-- ===================== Cuadro Log In ===================== -->
<div class="col-lg-6">
    <div class="p-5">
        <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4">@ViewData["Title"]</h1>
        </div>

        <hr />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <form class="user mt-4" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="col">
                <div class="form-group">
                    <input asp-for="Input.Email" class="form-control"
                           placeholder="@Html.DisplayNameFor(model => model.Input.Email)" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Input.Password" class="form-control"
                           placeholder="@Html.DisplayNameFor(model => model.Input.Password)" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(model => model.Input.RememberMe)
                        </label>
                    </div>
                </div>
            </div>

            <hr />

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">
                    @ViewData["Welcome"]
                </button>
            </div>
        </form>

        <hr />

        <div class="text-center">
            <a class="small" asp-area="Identity" asp-page="/Account/ForgotPassword">
                ¿Se te olvidó la contraseña?
            </a>
        </div>

        <div class="text-center">
            <a class="small" asp-area="Identity" asp-page="/Account/Register">
                ¿No cuentas con un usuario? ¡Regístrate!
            </a>
        </div>

        <hr />

        <div class="form-group row">
            <a href="/" class="btn btn-primary mx-auto">
                Volver a Inicio <i class="fa fa-home"></i>
            </a>
        </div>
    </div>
</div>

