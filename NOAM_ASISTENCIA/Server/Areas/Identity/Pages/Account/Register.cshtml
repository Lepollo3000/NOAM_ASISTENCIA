@page
@model RegisterModel
@{
    ViewData["Title"] = "Registro de Usuario";
    ViewData["Welcome"] = "Crea una cuenta";
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<!-- ===================== Imagen ===================== -->
<div class="col-lg-5 d-none d-lg-block bg-register-image ml-5"></div>

<!-- ===================== Cuadro Log In ===================== -->
<div class="col-lg-6">
    <div class="p-5">
        <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4">@ViewData["Welcome"]</h1>
        </div>

        <hr />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <form class="user my-4" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="col mb-4">
                <div class="form-group row">
                    <div class="col-md-6 col-12 mb-md-0 mb-3">
                        <input asp-for="Input.FirstName" class="form-control"
                               placeholder="@Html.DisplayNameFor(model => model.Input.FirstName)" />
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 col-12">
                        <input asp-for="Input.LastName" class="form-control"
                               placeholder="@Html.DisplayNameFor(model => model.Input.LastName)" />
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <hr />

            <div class="col my-4">
                <div class="form-group">
                    <input asp-for="Input.Email" class="form-control"
                           placeholder="@Html.DisplayNameFor(model => model.Input.Email)" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <div class="col-md-6 col-12 mb-md-0 mb-3">
                        <input asp-for="Input.Password" class="form-control"
                               placeholder="@Html.DisplayNameFor(model => model.Input.Password)" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 col-12">
                        <input asp-for="Input.ConfirmPassword" class="form-control"
                               placeholder="@Html.DisplayNameFor(model => model.Input.ConfirmPassword)" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">
                    Regístrame
                </button>
            </div>
        </form>

        <hr />

        <div class="text-center">
            <a class="small" asp-area="Identity" asp-page="/Account/Login">
                ¿Ya tienes una cuenta? ¡Inicia Sesión!
            </a>
        </div>

        <hr />

        <div class="form-group row">
            <a href="/" class="btn btn-primary mx-auto">
                Volver a Inicio <i class="fa fa-home"></i>
            </a>
        </div>
    </div>
</div>

