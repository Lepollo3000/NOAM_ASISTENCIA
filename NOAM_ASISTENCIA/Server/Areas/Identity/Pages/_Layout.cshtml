<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Pantallas de lógica de usuario para el sistema JolumaPOS">
    <meta name="author" content="Jose Lepe">

    <title>@ViewData["Title"]</title>

    <!-- Custom fonts for this template -->
    <link href="~/lib/fontawesome/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/lib/sb-admin-2/css/sb-admin-2.css" rel="stylesheet" />

    @await RenderSectionAsync("Css", required: false)
</head>

<body class="bg-gradient-primary">
    <div class="container">
        <!-- ===================== Fila Externa ===================== -->
        <div class="row justify-content-center d-flex align-items-center min-vh-100">
            <div class="col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg">
                    <!-- ===================== Carta Centrada ===================== -->
                    <div class="card-body p-0">
                        <div class="row">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript -->
    <script src="~/lib/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages -->
    <script src="~/lib/sb-admin-2/js/sb-admin-2.min.js"></script>

    <!-- Page level custom scripts -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
