<Row Flex="Flex.JustifyContent.Center">
    <Column>
        <Row Flex="Flex.JustifyContent.Center">
            <Icon Name="IconName.Times" TextColor="TextColor.Danger" IconSize="IconSize.x4" />
        </Row>

        <Divider TextColor="TextColor.Light" />

        <Row TextColor="TextColor.Danger" Margin="Margin.Is3.FromTop" Display="Display.Block" Padding="Padding.Is5.OnX">
            @foreach (var item in Errors)
            {
                <Paragraph>@item</Paragraph>
            }
        </Row>
    </Column>
</Row>

@code {
    [Parameter] public IEnumerable<string> Errors { get; set; } = null!;
}
