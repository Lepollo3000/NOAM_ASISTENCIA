<Row Flex="Flex.JustifyContent.Center">
    <Column Padding="Padding.Is5.OnX">
        <Row Flex="Flex.JustifyContent.Center">
            <Icon Name="IconName.Times" TextColor="TextColor.Danger" IconSize="IconSize.x4" />
        </Row>

        <Row Flex="Flex.JustifyContent.Center" Margin="Margin.Is3.FromTop">
            <UnorderedList TextColor="TextColor.Danger">
                @foreach (var item in Errors)
                {
                    <UnorderedListItem>@item</UnorderedListItem>
                }
            </UnorderedList>
        </Row>
    </Column>
</Row>

@code {
    [Parameter] public IEnumerable<string> Errors { get; set; } = null!;
}
