@page "/asistencia/registrar"
@inject IAsistenciaService AsistenciaService
@inject CustomAuthenticationStateProvider AuthStateProvider

<PageTitle>Registro de asistencia</PageTitle>

<LectorQR />

@code {
    private int IdSucursal;

    private async Task VerificarSucursal(){
        var result = await AsistenciaService.VerificarSucursal(new VerificacionSucursalRequest { IdSucursal = IdSucursal });

        if (result.Successful)
        {
            var authstate = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authstate.User;
            var name = user.Identity!.Name;
        }
    }
}
